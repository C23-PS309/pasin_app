<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.register.RegisterActivity">

    <ImageView
        android:id="@+id/Background_atas"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:background="@drawable/shape_background_banner_top"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:elevation="10dp"
        android:text="@string/tvRegister_txt"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvRegisterDescription"
        app:layout_constraintStart_toStartOf="@+id/tvRegisterDescription"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRegisterDescription"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:elevation="10dp"
        android:text="@string/tvRegisterDescription_txt"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRegister" />

    <EditText
        android:id="@+id/edFulllNameRegister"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"

        android:background="@drawable/shape_edit_text"
        android:elevation="6dp"
        android:fontFamily="@font/roboto_regular"
        android:hint="@string/edFullName_txt"
        android:inputType="text"

        android:outlineProvider="background"
        android:padding="13dp"
        app:layout_constraintEnd_toEndOf="@+id/tvRegisterDescription"
        app:layout_constraintStart_toStartOf="@+id/tvRegisterDescription"
        app:layout_constraintTop_toBottomOf="@+id/tvRegisterDescription" />

    <com.example.pasin_app.custom_view.EmailEditText
        android:id="@+id/edEmailRegister"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape_edit_text"

        android:elevation="6dp"
        android:ems="10"
        android:fontFamily="@font/roboto_regular"
        android:hint="@string/edEmailRegister_txt"
        android:inputType="text"

        android:outlineProvider="background"
        android:padding="13dp"
        app:layout_constraintEnd_toEndOf="@+id/edFulllNameRegister"
        app:layout_constraintStart_toStartOf="@+id/edFulllNameRegister"
        app:layout_constraintTop_toBottomOf="@+id/edFulllNameRegister" />

    <com.example.pasin_app.custom_view.RegisterPasswordEditText
        android:id="@+id/edPasswordRegister"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape_edit_text"

        android:elevation="6dp"
        android:ems="10"
        android:fontFamily="@font/roboto_regular"
        android:hint="@string/edPassword_txt"
        android:inputType="textPassword"

        android:outlineProvider="background"
        android:padding="13dp"
        app:layout_constraintEnd_toEndOf="@+id/edEmailRegister"
        app:layout_constraintStart_toStartOf="@+id/edEmailRegister"
        app:layout_constraintTop_toBottomOf="@+id/edEmailRegister" />

    <com.example.pasin_app.custom_view.RegisterPasswordEditText
        android:id="@+id/edConfirmPasswordRegister"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape_edit_text"

        android:elevation="6dp"
        android:ems="10"
        android:fontFamily="@font/roboto_regular"
        android:hint="@string/edConfirmPassword_txt"
        android:inputType="textPassword"

        android:outlineProvider="background"
        android:padding="13dp"
        app:layout_constraintEnd_toEndOf="@+id/edPasswordRegister"
        app:layout_constraintStart_toStartOf="@+id/edPasswordRegister"
        app:layout_constraintTop_toBottomOf="@+id/edPasswordRegister" />

    <TextView
        android:id="@+id/tvSudahPunyaAkun"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="10dp"
        android:text="@string/tvSudahPunyaAkun_txt"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/edConfirmPasswordRegister"
        app:layout_constraintStart_toStartOf="@+id/edConfirmPasswordRegister"
        app:layout_constraintTop_toBottomOf="@+id/edConfirmPasswordRegister" />

    <Button
        android:id="@+id/btnRegister"
        style="@style/Button_Style_Auth"
        android:layout_width="177dp"
        android:layout_height="50dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/btnRegister_txt"
        android:textColor="@color/dark_blue"
        app:layout_constraintEnd_toEndOf="@+id/edConfirmPasswordRegister"
        app:layout_constraintStart_toStartOf="@+id/tvSudahPunyaAkun"
        app:layout_constraintTop_toBottomOf="@+id/tvSudahPunyaAkun" />

    <TextView
        android:id="@+id/tvContinueWith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/tvContinueWith_txt"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toTopOf="@+id/tvContinuingWithGoogle"
        app:layout_constraintEnd_toEndOf="@+id/tvContinueWith"
        app:layout_constraintStart_toStartOf="@+id/tvContinueWith"
        app:srcCompat="@drawable/google_vector" />

    <TextView
        android:id="@+id/tvContinuingWithGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvContinuingWithGoogle_txt"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/tvTermsAndConditions_txt"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>